<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1>HTTP REQUEST</h1>
      <hr>
      <div class="row">
        <div class="col-md-12">
          <h6>Lista de Posts:</h6>
          <hr>
          <div class="row">
            <div class="col-md-12">
              <table class="table table-striped">
                <thead>
                  <tr>
                    <th>ID</th>
                    <th>Título</th>
                    <th>Conteúdo</th>
                    <th>Ações</th>
                  </tr>
                </thead>
                <tbody>
                  {{#each posts}}
                    <tr>
                      <td>{{id}}</td>
                      <td>{{titulo}}</td>
                      <td>{{conteudo}}</td>
                      <td>
                        <a href="/post/{{id}}" class="btn btn-primary">Ver</a>
                        <a href="/post/{{id}}/edit" class="btn btn-warning">Editar</a>
                        <a href="/post/{{id}}/delete" class="btn btn-danger">Excluir</a>
                      </td>
                    </tr>
                  {{/each}}
                </tbody>
              </table>
            </div>
        </div>
        <a href="/send" class="btn btn-primary">Voltar</a>
      </div>
    </div>
  </div>
</div>